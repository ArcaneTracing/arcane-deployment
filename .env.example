# Arcane Deployment - Environment Variables
# Copy to .env and set values for your environment.
# Defaults in docker-compose are suitable for local dev only.

# ============================================
# Database
# ============================================
# Full connection string. Default uses bundled postgres (user:password@postgres:5432/arcanedb).
# For external DB: postgresql://user:password@host:5432/dbname
DATABASE_URL=

# Set true for cloud/managed PostgreSQL with SSL
DATABASE_SSL=false

# Postgres container credentials (must match DATABASE_URL when using bundled postgres)
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=arcanedb

# ============================================
# Message Broker (RabbitMQ variants)
# ============================================
# RabbitMQ connection URL. Default: amqp://guest:guest@rabbitmq:5672/
# For external RabbitMQ: amqp://user:password@host:5672/
RABBITMQ_URL=

# ============================================
# Message Broker (Kafka variants)
# ============================================
# Comma-separated broker list. Default: kafka:9092
KAFKA_BROKERS=

# Topic/queue names for evaluation/experiment jobs (both RabbitMQ and Kafka)
EVALUATION_JOBS_TOPIC=
EVALUATION_RESULTS_TOPIC=
EXPERIMENT_JOBS_TOPIC=
EXPERIMENT_RESULTS_TOPIC=

# ============================================
# Auth & Security (REQUIRED in production)
# ============================================
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=
INTERNAL_API_KEY=
ENCRYPTION_KEY=
API_KEY_SALT=

# ============================================
# URLs (for auth callbacks, CORS)
# ============================================
# Backend URL as seen by the frontend (e.g. http://localhost:8085 or https://api.example.com)
BETTER_AUTH_URL=
# Frontend URL for CORS and redirects (e.g. http://localhost:3000 or https://app.example.com)
FRONTEND_URL=

# ============================================
# SMTP (optional - for invite emails)
# ============================================
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
MAIL_FROM=no-reply@example.com

# ============================================
# Enterprise License (optional)
# ============================================
# ARCANE_ENTERPRISE_LICENSE=
